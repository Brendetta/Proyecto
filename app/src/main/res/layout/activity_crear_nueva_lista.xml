<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ListaCompra"
    android:background="@drawable/background_book">

    <EditText
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="40sp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/nuevoProducto"
            android:layout_width="300dp"
            android:layout_height="match_parent" />

        <ImageButton
            android:id="@+id/addNuevoProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#70FDEEE3"
            app:srcCompat="@android:drawable/ic_input_add" />

    </LinearLayout>


    <ListView
        android:id="@+id/lista_productos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/guardar_lista"
        android:layout_below="@+id/linearLayout"
        android:background="#70FDEDE3" />


    <Button
        android:id="@+id/guardar_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="Aceptar"
        android:backgroundTint="#AC786C"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>